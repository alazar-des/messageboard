extends layout

block content
  h1(class="text-2xl font-bold mb-6") #{title}

  div(class="")
    each message in messages
      div(class="md:mr-8 mb-4 shadow-lg py-4 bg-white")
        p(class="capitalize mb-4 font-bold") #{message.title} 
        p(class="") #{message.body}
        hr(class="")
        div(class="md:flex justify-between mt-2")
          div 
            span(class="text-sm italic") Posted by 
            span(class="font-semibold") #{message.user.user_name} 
          div 
            sapn(class="text-sm italic") Posted on 
            span(class="font-semibold text-sm") #{message.posted_date}
