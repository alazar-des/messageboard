extends layout

block content
  h1(class="text-2xl font-bold mb-6") #{title}

  div(class="")
    each message in messages
      div(class="md:mr-8 mb-4 shadow-sm p-4 bg-white")
        p(class="capitalize mb-4 font-bold") #{message.title} 
        p(class="mb-4") #{message.body}
        if (locals.currentUser && locals.currentUser.membership_status)
          hr(class="")
          div(class="md:flex justify-between mt-2")
            div 
              span(class="text-sm italic") Posted by 
              span(class="font-semibold") #{message.user.user_name} 
            div 
              sapn(class="text-sm italic") Posted on 
              span(class="font-semibold text-sm") #{message.posted_date}
        if (locals.currentUser && locals.currentUser.role === "admin")
          div(class="flex justify-end mt-2")
            a(href=message.url+'/delete' class="transition duration-500 bg-red-500 hover:bg-red-700 text-white text-sm font-bold py-1 px-2 rounded focus:outline-none;") Delete
