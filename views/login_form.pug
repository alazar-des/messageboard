extends layout 

block content  
  title #{title}

  div(class="container mx-auto flex items-center justify-center")
    div(class="w-full pt-2 p-4") 
      div(class="mx-auto md:p-6 sm:w-3/4")
        h1(class="text-2xl font-bold text-indigo-500 text-centr mb-4 text-center") Login
        div(class="bg-while shadow-md rounded px-2 md:px-8 pt-6 pb-8 mt-4")
          form(action="" method="POST")
            p(class="error_msg mb-2 font-bold") #{message}
            div(class="mb-8")
              label(for="username" class="lable")
                sapn(class="text-red-500") &nbsp;*
                span(class="ml-1") username 
              div(class="input-container")
                div(class="svg-constainer")
                  
                input(type="text" name="username" id="username" placeholder="username" class="input")

            div(class="mb-8")
              label(for="password" class="lable")
                sapn(class="text-red-500") &nbsp;*
                span(class="ml-1") password  
              div(class="input-container")
                div(class="svg-constainer")
                  
                input(type="password" name="password" id="password" placeholder="*******" class="input")
            
            div(class="mb-4")
              div(class="form-btn-container")
                button(type="submit" class="form-btn") Log in
                div
                  span(class="text-sm") Don't have an account? 
                  a(href="/users/signup" class="another-action") Signup